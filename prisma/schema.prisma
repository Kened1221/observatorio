generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Edad {
  id       String @id @default(cuid())
  rango    String @unique // Ejemplo: '6 a 11 años', '12 a 17 años'
  cantidad Int
}

model Sexo {
  id       String @id @default(cuid())
  genero   String @unique // MASCULINO, FEMENINO, PREFIERO_NO_RESPONDER
  cantidad Int
}

model Nacionalidad {
  id       String @id @default(cuid())
  nombre   String @unique // Ejemplo: 'Peruana', 'Venezolana'
  cantidad Int
}

model Distrito {
  id       String @id @default(cuid())
  nombre   String @unique // Ejemplo: 'Ayacucho', 'Quinua'
  cantidad Int
}

model TipoPoblacion {
  id       String @id @default(cuid())
  tipo     String @unique // Ejemplo: 'Estudiante de secundaria'
  cantidad Int
}

model TotalEncuestados {
  id    String @id @default(cuid())
  total Int
}
